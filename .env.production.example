# File .env per ambiente di PRODUZIONE
# NON committare questo file su git!

# ====================================
# Django Core
# ====================================
SECRET_KEY=YOUR-PRODUCTION-SECRET-KEY-HERE-CHANGE-THIS
DEBUG=false
ALLOWED_HOSTS=mygest.example.com,www.mygest.example.com

# ====================================
# Database
# ====================================
DATABASE_URL=postgresql://mygest_prod:STRONG_PASSWORD_HERE@localhost:5432/mygest_production

# ====================================
# File Storage e Archivio
# ====================================
ARCHIVIO_BASE_PATH=/srv/mygest/archivio
UPLOAD_TEMP_DIR=tmp
IMPORTAZIONI_SOURCE_DIRS=/srv/mygest/importazioni

# ====================================
# Upload File - Limiti e Sicurezza
# ====================================
FILE_UPLOAD_MAX_MEMORY_SIZE=52428800  # 50 MB
DATA_UPLOAD_MAX_MEMORY_SIZE=104857600  # 100 MB

# ====================================
# Antivirus - ClamAV
# ====================================
ANTIVIRUS_ENABLED=true
ANTIVIRUS_REQUIRED=true  # In produzione, blocca se antivirus non disponibile
CLAMAV_SOCKET=/var/run/clamav/clamd.ctl

# ====================================
# Email
# ====================================
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.yourprovider.com
EMAIL_PORT=587
EMAIL_USE_TLS=true
EMAIL_HOST_USER=noreply@mygest.example.com
EMAIL_HOST_PASSWORD=your-email-password

# ====================================
# Security Headers
# ====================================
SECURE_SSL_REDIRECT=true
SESSION_COOKIE_SECURE=true
CSRF_COOKIE_SECURE=true

# ====================================
# Google Calendar Integration
# ====================================
GOOGLE_CALENDAR_CREDENTIALS_FILE=/srv/mygest/secrets/google_credentials.json
GOOGLE_CALENDAR_DEFAULT_ID=production-calendar-id@group.calendar.google.com
